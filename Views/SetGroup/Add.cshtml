@{
    ViewData["Title"] = "新增群組";
}

<form method="post" asp-controller="SetGroup" asp-action="Add">
    <div class="mb-3">
        <label for="GroupName" class="form-label">群組名稱</label>
        <input type="text" class="form-control" id="GroupName" name="GroupName" required>
    </div>
    <div class="row">
        @foreach (var item in ViewBag.Features)
        {
            <div class="col-xxl-2 col-xl-3 col-lg-4 col-md-6">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="@item.FeatureName" name="@item.FeatureName">
                    <label class="form-check-label" for="@item.FeatureName">@item.FeatureName</label>
                </div>
            </div>
        }
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>