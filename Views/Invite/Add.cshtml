@{
    ViewData["Title"] = "新增邀請";
}

<form method="post" asp-controller="Invite" asp-action="Add">
    <div class="mb-3">
        <label for="InviteName" class="form-label">受邀人姓名</label>
        <input type="text" class="form-control" id="InviteName" name="InviteName">
    </div>
    <div class="mb-3">
        <label for="InviteEmail" class="form-label">受邀人Email</label>
        <input type="email" class="form-control" id="InviteEmail" aria-describedby="emailHelp" name="InviteEmail">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>